
//- # racial profiling citation - edit

extends ../layout

block content

  .container
    .row
      .col-md-4.col-md-offset-4
        h1 Edit Racial profiling citation - #{racialProfilingCitation.name}

        form(action='/racial-profiling-citations/' + racialProfilingCitation.id + '?_method=PUT', method='POST')
          input(type='hidden', name='_csrf', value=csrf)
          .form-group
            label.control-label Name
            input(type='text', name='name', placeholder='Name', value=racialProfilingCitation.name, required).form-control

          button(type='submit').btn.btn-lg.btn-primary.btn-block Update Racial profiling citation
