
//- # officer involved shooting - edit

extends ../layout

block content

  .container
    .row
      .col-md-4.col-md-offset-4
        h1 Edit Officer involved shooting - #{officerInvolvedShooting.name}

        form(action='/officer-involved-shootings/' + officerInvolvedShooting.id + '?_method=PUT', method='POST')
          input(type='hidden', name='_csrf', value=csrf)
          .form-group
            label.control-label Name
            input(type='text', name='name', placeholder='Name', value=officerInvolvedShooting.name, required).form-control

          button(type='submit').btn.btn-lg.btn-primary.btn-block Update Officer involved shooting
