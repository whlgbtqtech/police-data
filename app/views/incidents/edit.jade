
//- # incident - edit

extends ../layout

block content

  .container
    .row
      .col-md-4.col-md-offset-4
        h1 Edit Incident - #{incident.name}

        form(action='/incidents/' + incident.id + '?_method=PUT', method='POST')
          input(type='hidden', name='_csrf', value=csrf)
          .form-group
            label.control-label Name
            input(type='text', name='name', placeholder='Name', value=incident.name, required).form-control

          button(type='submit').btn.btn-lg.btn-primary.btn-block Update Incident
